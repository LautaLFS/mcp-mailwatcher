# Configuración de correo (Exchange EWS / MAPI)

# Credenciales del buzón de Exchange
MAIL_USER=usuario
MAIL_PASS=tu-contraseña

# Dominio y workstation para NTLM
NTLM_DOMAIN=domain
NTLM_WORKSTATION=workstation



# Carpetas de correo
MAIL_FOLDER=INBOX
MAIL_PROCESSED_FOLDER=Procesados

# URL de EWS (MAPI sobre HTTP)
# Ejemplo típico on-prem:
#   https://mail.interno.local/EWS/Exchange.asmx
EWS_URL=https://mail.interno.local/EWS/Exchange.asmx

# Intervalo de polling (en minutos)
POLL_INTERVAL_MINUTES=5

# Configuración de Ollama
OLLAMA_MODEL=llama3
OLLAMA_API=http://localhost:11434/api/generate

# Slack
SLACK_TOKEN=xoxb-tu-token-de-bot
SLACK_CHANNEL=infraestructura


